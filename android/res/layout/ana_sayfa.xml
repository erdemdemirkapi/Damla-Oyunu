<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.erdem.filmbilmece.MainActivity"
        android:id="@+id/ana_sayfanin_tamami_RL">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bas_kisim_color"
            android:id="@+id/ana_ilk_kisim_RL">

            <TextView
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/level"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="10sp"
                android:id="@+id/seviye_yazisi_textView" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:id="@+id/seviye_textView"
                android:layout_below="@+id/seviye_yazisi_textView"
                android:layout_centerHorizontal="true"
                android:text="1"
                android:textColor="@color/seviye_text_color"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/altin_textView"
                android:text="1200"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:layout_marginRight="5dp"

                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:id="@+id/uygulama_adi_textView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ana_ilk_kisim_RL"
            android:layout_marginTop="20dp"
            android:text="@string/app_name"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/app_name"
            android:fontFamily="@font/karikatura_bold" />

        <Button
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:layout_below="@+id/uygulama_adi_textView"
            android:layout_centerHorizontal="true"
            android:id="@+id/basla_button"
            android:background="@drawable/button"
            android:text="Başla"
            android:textColor="@color/seviye_text_color"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:id="@+id/reklam_button"
            android:layout_below="@+id/basla_button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:layout_marginTop="20dp"
            android:text="Altın Kazan"
            android:textColor="@color/seviye_text_color"
            android:textStyle="bold"/>

        <Button
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:id="@+id/ayarlar_button"
            android:background="@drawable/button"
            android:text="Ayarlar"
            android:textStyle="bold"
            android:textColor="@color/seviye_text_color"
            android:layout_below="@+id/reklam_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</ScrollView>